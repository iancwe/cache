<div class="container">

  <%= link_to('Back to Rewards List', rewards_path, :method => :get) %>

  <h3>I want to claim </h3>
  <h4>{ <%=@rewards.item %> }</h4>



<h2>Reward Chosen</h2>
<table>
  <thead>
    <th>Retailer</th>
    <th>Value</th>
    <th>Expiry Date</th>
    <th>Category</th>
  </thead>
  <tbody>
    <tr>
    <td><%=@rewards.merchant%></td>
    <td><%=@rewards.value%></td>
    <td><%=@rewards.expiry%></td>
    <td><%=@rewards.category%></td>
  </tr>
  </tbody>
</table>


  <p><em>Current Cache Dollars:</em> $<%= @credit - @rewarding%> <em>Cache Value for Reward:</em> $<%=@rewards.value %></p>


<div class= 'center-align'>
  <%= image_tag("#{@rewards.id}.jpg")%>
</div>

  <p class='center purple-text darken-3'>The promotion code for <%=@rewards.merchant%> will be shown on the next page after clicking on the Claim button below!</p>

  <%= link_to "Claim", claimed_path, :id => @rewards.id, class: "waves-effect waves-light btn", method: :post%>

  <br>
  <br>
</div>

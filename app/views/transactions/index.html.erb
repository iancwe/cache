<div class="container">
  <h4>Total Savings: <%= @total %></h4>
  <h4>Total Credits Used: <%= @rewarding %></h4>
  <h4>Credits: <%= @credit-@rewarding %></h4>
  <h4>Cash Back: <%= @cashback %></h4>
  <h4>Savings + Cash Back: <%= @total+@cashback %></h4>
  <br />
  <br />
  <%= link_to('Complete Profile', edit_profile_path(current_user.id), :method => :get) %>
  <br>
  <%= link_to('Top Up', transactions_new_path, :method => :get) %>
  <%= link_to('Withdraw', transactions_withdraw_path, :method => :get) %>
  <%= link_to('Rewards', rewards_path, :method => :get) %>

  <br />


  <table class="responsive-table">
    <thead>
      <th>Transaction Date (yyyy/mm/dd)</th>
      <th>Transaction Amount ($)</th>
    </thead>
    <tbody>
      <% @sumofmoney.each do |tran| %>
        <tr>
          <td><%= tran.transacted_date %></td>
          <td><%= tran.transacted_amount %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>

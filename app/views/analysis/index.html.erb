<h1>ANALYSIS TEST</h1>

<h2>Monthly Income: <%= @user.income.monthly_income %></h2>
<h2>Monthly Savings Goal: <%= @user.income.monthly_savings_goal %></h2>
<h2>Final Savings Goal: <%= @user.income.final_savings_goal %></h2>

<table>
  <thead>
<th>
  year
</th>
<th>
  savings
</th>
  </thead>
  <tbody>
    <% @index = 0 %>
    <% @savings = @user.income.monthly_savings_goal * 12 %>
    <% @big = 0.1 %>
    <% @small = 0.03 %>
    <% @y = @savings + @savings * @small %>
    <% @array = [@y]  %>
    <% 10.times do %>

    <tr>
    <td>
    <%= @index + 1 %>
    </td>
    <td>
      <%= ActionController::Base.helpers.number_to_currency(@array.inject(0) {|first,second| first + second }, precision: 0, locale: :en) %>
    </td>
    </tr>
    <% @y = @y * (1 + @big) +  @savings * @small  %>
    <% @array << @y %>
    <% @index +=1 %>
    <% end %>
  </tbody>
</table>
